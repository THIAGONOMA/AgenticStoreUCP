# User Agent - Configuracoes de Ambiente

# LLM - Gemini (deixe vazio para modo sem LLM)
GOOGLE_API_KEY=bring-your-own-key

# Modelo Gemini
GEMINI_MODEL=gemini-2.0-flash-lite

# Servidores
# API Gateway (A2A WebSocket e REST)
API_GATEWAY_URL=http://localhost:8000
# UCP Server (checkout direto)
UCP_SERVER_URL=http://localhost:8182

# Lojas padrao (UCP Server)
DEFAULT_STORES=["http://localhost:8182"]

# A2A
A2A_RECONNECT_INTERVAL=5.0
A2A_PING_INTERVAL=30.0

# Seguranca
USER_KEY_ID=user-agent-key-001
JWT_EXPIRY_SECONDS=3600

# Debug
DEBUG=True
LOG_LEVEL=INFO
